<div class="container">
    <div class="row">
        <div class="col-12 col-md-3">
          <%= render 'components/user_info', user: current_user %>
          <%= render 'components/new_book' %>
        </div>
        <div class="col-12 col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class="books">
          <tr>
            <th class="book-title">Image</th>
            <th class="book-body">name</th>
            <th></th>
          </tr>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 64, 64, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td><%= user.name %></td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
        <% end %>
        </table>
        </div>
    </div>
</div>