<% if @user.present? && @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:<br />
  <% @user.errors.full_messages.each do |message| %>
    <%= message %><br />
  <% end %>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

          <h2 class="mt-3">User info</h2>
          <%= form_with model:@user, local:true do |f| %>
                      
            <div class="form-group">
              <label for="inputName">Name</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", :class => 'form-control', placeholder:"名前"%>
            </div>

            <div class="form-group">
              <label for="user_profile_image">Image</label>
              <%= f.attachment_field :profile_image, id:"user_profile_image", :class => "form-control-file", placeholder: "プロフィール画像" %>
            </div>
            
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Introduction</label>
              <%= f.text_area :introduction, :class => "form-control", autofocus: true, id:"user_introduction", placeholder:"名前"%>
            </div>
            
            <%= f.submit "Update User", :class => "btn btn-secondary" %>
          <% end %>

    </div>
  </div>
</div>