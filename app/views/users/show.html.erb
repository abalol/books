<div class="container">
  <div class="row">
      <div class="col-12 col-md-3">
        <%= render 'components/user_info', user: @user %>
        <%= render 'components/new_book' %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="books">
          <tr>
            <th></th>
            <th class="book-title">Title</th>
            <th class="book-body">Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id), class: 'nav-link' do  %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 64, 64, format: 'jpeg', fallback: "no_image.jpg" %><br />
                <%= book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to show_book_path(book.id), class: 'nav-link' do  %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
      </div>
  </div>
</div>