<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Update Book", :class=>'btn btn-success' %>
<% end %>
<%= link_to "Show", show_book_path(@book.id) %> | 
<%= link_to "Back", books_path %>

<% if @book && @book.errors.any? %>
<hr>
  error : <%= @book.errors.count %>件のエラーが発生しました
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
  
<% end %>