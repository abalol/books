<% if @book.present? && @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:<br />
  <% @book.errors.full_messages.each do |message| %>
    <%= message %><br />
  <% end %>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-3">
          <%= render 'components/user_info', user: current_user %>
          <%= render 'components/new_book' %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2 class="mt-3">Books</h2>
          <table class="table">
          <tr>
            <th scope="col" class="book-title"></th>
            <th scope="col" class="book-title">Title</th>
            <th scope="col" class="book-body">Opinion</th>
          </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id), class: 'nav-link' do  %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 64, 64, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to show_book_path(book.id), class: 'nav-link' do  %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </table>
        </div>
    </div>
</div>
