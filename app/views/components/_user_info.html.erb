<h2>User info</h2>
<table class="table">
<tr>
  <th><%= attachment_image_tag user, :profile_image, :fill, 64, 64, fallback: "no_image.jpg" %></th>
  <th></th>
</tr>
<tr>
  <th>name</th>
  <th><%= user.name %></th>
</tr>
<tr>
  <th>introduction</th>
  <th><%= user.introduction %></th>
</tr>
</table>

<div class="mt-4 mb-4">
  <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block fa' do %>
    <i class=" fas fa-user-cog edit_user_50443"></i>
  <% end %>
</div>
