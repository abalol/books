<h2>New book</h2>
<%= form_with model: Book.new, url:'/books', local:true do |f| %>
  <p>Title</p>
  
  <div class="input-group mb-3">
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  
  <p>Body</p>
  <%= f.text_area :body, :class => 'form-control'  %>
  <%= f.submit 'Create Book', :class => 'btn btn-success mt-3' %>
<% end %>